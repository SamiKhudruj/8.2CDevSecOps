pipeline {
  agent any
  tools { nodejs 'Node 18.x' }         // must equal the name in Global Tool Configuration
  options { timestamps(); ansiColor('xterm') }

  stages {
    stage('Checkout') {
      steps { git branch: 'main', url: 'https://github.com/SamiKhudruj/8.2CDevSecOps.git' }
    }
    stage('Install Dependencies') { steps { sh 'npm ci || npm install' } }
    stage('Run Tests')            { steps { sh 'npm test || true' } }
    stage('Generate Coverage')    { steps { sh 'npm run coverage || true'; archiveArtifacts 'coverage/**/*' } }
    stage('NPM Audit (Security)') { steps { sh 'npm audit --audit-level=low || true' } }
  }
  post { always { archiveArtifacts artifacts: 'npm-debug.log*', allowEmptyArchive: true } }
}
